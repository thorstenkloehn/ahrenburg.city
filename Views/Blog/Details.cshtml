@model ahrenburg.city.Models.BlogPost
@{
    ViewData["Title"] = Model.Title;
}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <h1 class="mb-3">@Model.Title</h1>
        <p class="text-muted small mb-4">Veröffentlicht am @Model.CreatedAt.ToLocalTime()</p>
        <div class="mb-4" style="font-size:1.2rem;line-height:1.7;">
            @Model.Content
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Zurück zum Blog</a>
        @if (User.Identity != null && User.Identity.IsAuthenticated && User.Identity.Name == "thorstenkloehn@gmail.com")
        {
            <a class="btn btn-outline-primary ms-2" asp-action="Edit" asp-route-id="@Model.Id">Bearbeiten</a>
        }
    </div>
</div>
